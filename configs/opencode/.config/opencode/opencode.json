{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-anthropic-auth@latest",
    "opencode-pty",
    "opencode-antigravity-auth@beta"
  ],
  "lsp": {
    "scala-lsp": {
      "command": ["metals"],
      "extensions": [".scala", ".sc", ".sbt"]
    }
  },
  "agent": {
    "plan": {
      "permission": {
        "bash": "allow"
      }
    }
  },
  "mcp": {
    "dart": {
      "type": "local",
      "enabled": false,
      "command": ["dart", "mcp-server"]
    },
    "mcp-obsidian": {
      "type": "local",
      "enabled": false,
      "command": [
        "/Users/ice/.local/bin/uv",
        "--directory",
        "/Users/ice/projects/mcp-obsidian",
        "run",
        "mcp-obsidian"
      ],
      "environment": {
        "OBSIDIAN_API_KEY": "{env:OBSIDIAN_API_KEY}"
      }
    },
    "PureSpectrum": {
      "type": "local",
      "enabled": false,
      "command": ["npx", "-y", "apidog-mcp-server@latest", "--site-id=748984"]
    },
    "notionMCP": {
      "type": "local",
      "enabled": false,
      "command": ["npx", "-y", "mcp-remote", "https://mcp.notion.com/mcp"]
    },
    "focaldata": {
      "type": "local",
      "enabled": false,
      "command": [
        "/Users/ice/.local/bin/uv",
        "--directory",
        "/Users/ice/work/focaldata/fd-mcp",
        "run",
        "python",
        "-m",
        "src.server"
      ]
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest", "--extension"],
      "enabled": false
    },
    "mcp-atlassian": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "--env-file",
        "/Users/ice/mcp-atlassian.env",
        "ghcr.io/sooperset/mcp-atlassian:latest",
        "--verbose",
        "--no-jira-ssl-verify",
        "--no-confluence-ssl-verify"
      ],
      "enabled": false
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": false,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_TOKEN}"
      }
    },
    "digitalocean": {
      "type": "local",
      "enabled": false,
      "command": ["npx", "-y", "@digitalocean/mcp"],
      "environment": {
        "DIGITALOCEAN_API_TOKEN": "{env:DIGITALOCEAN_ACCESS_TOKEN}"
      }
    }
  },
  "provider": {
    "google": {
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview (Gemini CLI)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        }
      }
    }
  }
}

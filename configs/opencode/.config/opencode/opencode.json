{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "scala-lsp": {
      "command": ["metals"],
      "extensions": [".scala", ".sc", ".sbt"]
    }
  },
  "agent": {
    "plan": {
      "permission": {
        "bash": "allow"
      }
    }
  },
  "mcp": {
    "mcp-obsidian": {
      "type": "local",
      "enabled": true,
      "command": [
        "/Users/ice/.local/bin/uv",
        "--directory",
        "/Users/ice/projects/mcp-obsidian",
        "run",
        "mcp-obsidian"
      ],
      "environment": {
        "OBSIDIAN_API_KEY": "{env:OBSIDIAN_API_KEY}"
      }
    },
    "PureSpectrum": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "apidog-mcp-server@latest", "--site-id=748984"]
    },
    "notionMCP": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "mcp-remote", "https://mcp.notion.com/mcp"]
    },
    "focaldata": {
      "type": "local",
      "enabled": true,
      "command": [
        "/Users/ice/.local/bin/uv",
        "--directory",
        "/Users/ice/work/focaldata/fd-mcp",
        "run",
        "python",
        "src/server.py"
      ]
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest", "--extension"],
      "enabled": true
    }
  }
}

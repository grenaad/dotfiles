{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "ls *": "allow",
      "pwd *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "git *": "allow",
      "rg *": "allow",
      "jq *": "allow",
      "cd *": "allow",
      "uv *": "allow",
      "wc *": "allow",
      "cat *": "allow"
    }
  },
  "mcp": {
    "mcp-obsidian": {
      "type": "local",
      "enabled": true,
      "command": [
        "/Users/ice/.local/bin/uv",
        "--directory",
        "/Users/ice/projects/mcp-obsidian",
        "run",
        "mcp-obsidian"
      ],
      "environment": {
        "OBSIDIAN_API_KEY": "{env:OBSIDIAN_API_KEY}"
      }
    },
    "PureSpectrum": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "apidog-mcp-server@latest", "--site-id=748984"]
    },
    "notionMCP": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "mcp-remote", "https://mcp.notion.com/mcp"]
    },
    "focaldata": {
      "type": "local",
      "enabled": true,
      "command": [
        "/Users/ice/.local/bin/uv",
        "--directory",
        "/Users/ice/work/focaldata/fd-mcp",
        "run",
        "python",
        "src/server.py"
      ]
    }
  }
}

{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "scala-lsp": {
      "command": ["metals"],
      "extensions": [".scala", ".sc", ".sbt"]
    }
  },
  "agent": {
    "plan": {
      "permission": {
        "bash": "allow"
      }
    }
  },
  "mcp": {
    "dart": {
      "type": "local",
      "enabled": false,
      "command": ["dart", "mcp-server"]
    },
    "mcp-obsidian": {
      "type": "local",
      "enabled": false,
      "command": [
        "/Users/ice/.local/bin/uv",
        "--directory",
        "/Users/ice/projects/mcp-obsidian",
        "run",
        "mcp-obsidian"
      ],
      "environment": {
        "OBSIDIAN_API_KEY": "{env:OBSIDIAN_API_KEY}"
      }
    },
    "PureSpectrum": {
      "type": "local",
      "enabled": false,
      "command": ["npx", "-y", "apidog-mcp-server@latest", "--site-id=748984"]
    },
    "notionMCP": {
      "type": "local",
      "enabled": false,
      "command": ["npx", "-y", "mcp-remote", "https://mcp.notion.com/mcp"]
    },
    "focaldata": {
      "type": "local",
      "enabled": false,
      "command": [
        "/Users/ice/.local/bin/uv",
        "--directory",
        "/Users/ice/work/focaldata/fd-mcp",
        "run",
        "python",
        "-m",
        "src.server"
      ]
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest", "--extension"],
      "enabled": false
    },
    "mcp-atlassian": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "--env-file",
        "/Users/ice/mcp-atlassian.env",
        "ghcr.io/sooperset/mcp-atlassian:latest",
        "--verbose",
        "--no-jira-ssl-verify",
        "--no-confluence-ssl-verify"
      ],
      "enabled": false
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": false,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_TOKEN}"
      }
    },
    "digitalocean": {
      "type": "local",
      "enabled": false,
      "command": ["npx", "-y", "@digitalocean/mcp"],
      "environment": {
        "DIGITALOCEAN_API_TOKEN": "{env:DIGITALOCEAN_ACCESS_TOKEN}"
      }
    }
  }
}
